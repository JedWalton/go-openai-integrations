# Use a base node image
FROM node:20-alpine

WORKDIR /app

# Set environment variable for chokidar (used by Next.js for watching files)
ENV CHOKIDAR_USEPOLLING=true

# Link lucidify-chat globally
WORKDIR /lucidify-chat
RUN npm link

# Navigate back to the app directory and link lucidify-chat
WORKDIR /app
RUN npm link lucidify-chat

# Copy package.json and package-lock.json to utilize Docker cache
COPY package.json package-lock.json ./

# Install npm globally in the container
RUN npm install

# Copy the rest of the application files
COPY . .

# This command will be used to start the Next.js dev server
CMD ["npm", "run", "dev"]

